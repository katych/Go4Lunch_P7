<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/message_header_language">

        <ListPreference
            app:key="language"
            app:title="@string/chose_your_language"
            app:defaultValue="en"
            app:summary="@string/current_language"
            app:icon="@drawable/ic_language"
            app:entries="@array/ListLanguages"
            app:entryValues="@array/ListLanguages_values"
            />
    </PreferenceCategory>

</PreferenceScreen>