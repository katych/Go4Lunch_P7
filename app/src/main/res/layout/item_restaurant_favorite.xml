<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_2"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="60"
            android:orientation="vertical">

            <TextView
                android:id="@+id/list_item_name_restaurant"
                style="@style/item_text_style"
                android:maxLength="30"
                tools:text="le zinc"/>

            <TextView
                android:id="@+id/list_item_restaurant_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="@dimen/text_size_14"
                tools:text="french - 21 rue du bordage lucas" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/star1"
                style="@style/stars"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star2"
                style="@style/stars"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/star3"
                style="@style/stars"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <ImageView
            android:id="@+id/list_item_restaurant_image"
            android:layout_width="0dp"
            android:layout_height="@dimen/image_restaurant"
            android:layout_margin="@dimen/margin_5"
            android:layout_weight="20"
            android:contentDescription="@string/restaurant_image"
            app:srcCompat="@drawable/ic_orange_bowl" />

    </LinearLayout>

</androidx.cardview.widget.CardView>