<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="horizontal">

        <!-- TextView -->
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="@dimen/margin_5">

    <TextView
        android:id="@+id/list_item_name_restaurant"
        style="@style/item_text_style"
        android:text="Le Zinc"
        android:maxLength="30" />

     <TextView
    android:id="@+id/list_item_restaurant_address"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="French -12 Rue du Faubourg PoissoniÃ©re "
    android:textSize="@dimen/text_size_12"
    android:maxLines="1"
    />

    <TextView
        android:id="@+id/list_item_opening"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="open "
        style="@style/item_text_open"  />

</LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="20">

    <TextView
        android:id="@+id/list_item_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="120"
        android:textSize="@dimen/text_size_12"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:id="@+id/list_item_icon_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/worker_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(0)"
            style="@style/item_workers_style"
            android:drawableStart="@drawable/ic_identity_black"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/stars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/star1"
            style="@style/stars"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/star2"
            style="@style/stars"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/star3"
            style="@style/stars"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    </LinearLayout>

        <ImageView
            android:id="@+id/list_item_restaurant_image"
            android:layout_width="75dp"
            android:layout_height="80dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="1dp"
            android:src="@drawable/ic_bowl"
           />

        </LinearLayout>

</androidx.cardview.widget.CardView>