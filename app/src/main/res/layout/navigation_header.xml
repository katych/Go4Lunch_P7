<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/navigationHeader"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/ic_restaurant_image"
       >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_16"
        android:gravity="bottom"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textViewLogoDrawer"
            style="@style/header_navigation"
            android:text="Go4Lunch"
             />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageProfileHeader"
            android:layout_width="@dimen/image_button_50"
            android:layout_height="@dimen/image_button_50"
            android:layout_margin="@dimen/margin_5"
            app:srcCompat="@drawable/ic_identity"
          />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/nameProfileHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_margin="@dimen/margin_5"
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@android:color/white"
               />

            <TextView
                android:id="@+id/emailProfileHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@android:color/white"
                android:layout_margin="@dimen/margin_5"
                />

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>